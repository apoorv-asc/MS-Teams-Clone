<%- include("partials/header"); %>
<%- include("partials/leftoptions"); %>

<div class="row">
    <div class="col-2"> 
        <div class="sidebar">
           <div class="sidebar-wrapper">
               <a href="#" class="nav_logo"></a>
               <div class="nav_list">
                   <img src="<%= team.avatar %>" width="200" height="200"><br><br>
                   <h2><b><%= team.team_name %></b></h2>
                   <ul>
                       <li><a href="/team/<%= team.team_name %>">Calls</a></li>
                       <li><a href="/chat/teamchat/<%= team.team_name %>/<%= team.ChatID %>">Chat</a></li>
                       <li><a class="active" href="#">Team Info</a></li>
                       <li><a href="/settings/manage_team/<%= team.team_name %>">Manage</a></li>
                       <li><a href="/team/leave_team/<%= team.team_name %>">Leave team</a></li>
                     </ul>
               </div>
           </div>
       </div> 
   </div>
   <div class="col-10">
        <p style="font-size: 400%;font-weight: 700; text-align: center;"><%= team.team_name %></p>
        <h3>Participants</h3>
        <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Ogranization</th>
                <th scope="col">Contact Number</th>
              </tr>
            </thead>
            <tbody>
                <% var count=1; %>
                <% (users).forEach((user)=>{ %>

                    <tr>
                      <th scope="row"><%= count %></th>
                      <td><%= user.username %></td>
                      <td><%= user.email %></td>
                      <td><%= user.organization%></td>
                      <td><%= user.phone %></td>
                    </tr>

                <% count=count+1; }) %>

            </tbody>
          </table>
   </div>
</div>