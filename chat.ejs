<!DOCTYPE html>
<html>

<head>
    <title>MS Team Clone</title>
    <link rel="icon" href="/img/favicon.png">
    <link rel="stylesheet" href="/css/chat.css">
    <script>
        const roomId = "<%= id %>"
        const username = "<%= chats.username %>"
    </script>
</head>
<body>
    <div class="chat">
        <div class="chat__sidebar">
            <form method="POST" action="/chat/new_chat">
                <select name="user" id="">
                    <% (newChat).forEach((friend)=>{ %>
                        <% if(friend.email != user.username ){ %>
                        <option value="<%= friend.email %>"><%= friend.email %></option>
                    <%} }) %>
                </select>
                <button type="submit">Start</button>
            </form>

            <% if(chats !=null) { %>
            <% (chats.chat).forEach((chat)=>{ %>
                <a href="/chat/<%= chat.ChatID %>"><%= chat.user %></a>
                <br>
            <% }) } %>
            
        </div>
        <div class="chat__main">
            <div id="messages" class="chat__messages">
                <% if(prevChat != null && prevChat.msg != null) { %>
                <% (prevChat.msg).forEach((msg)=>{ %>
                    <div class="message">
                        <p>
                            <span class="message__name"><%= msg.username %></span>
                            <span class="message__meta"><%= msg.timestamp %></span>
                        </p>
                        <p><%= msg.message %></p>
                    </div>
                <% }) } %>

            </div>

            <div class="compose">
                <form id="message-form">
                    <input name="message" placeholder="Message">
                    <button>Send</button>
                </form>
                <!-- <button id="send-location">Send location</button> -->
            </div>
        </div>
    </div>

    <script id="message-template" type="text/html">
            <div class="message">
                <p>
                    <span class="message__name">{{username}}</span>
                    <span class="message__meta">{{createdAt}}</span>
                </p>
                <p>{{message}}</p>
            </div>
        </script>

    <script id="location-message-template" type="text/html">
            <div class="message">
                <p>
                    <span class="message__name">Some User Name</span>
                    <span class="message__meta">{{createdAt}}</span>
                </p>
                <p><a href="{{url}}" target="_blank">My current location</a></p>
            </div>
        </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chat.js"></script>
</body>

</html>